<Window x:Class="Desktop.EditWorkload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="EditWorkload" Height="600" Width="400">
    <Grid>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="489" Margin="10,10,0,0" VerticalScrollBarVisibility="Visible" VerticalAlignment="Top" Width="372" >
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="button" Content="Save" HorizontalAlignment="Left" Margin="10,519,0,0" VerticalAlignment="Top" Width="118" Height="26" Click="button_Click"/>
        <Button x:Name="Close" Content="Close" HorizontalAlignment="Left" Margin="264,519,0,0" VerticalAlignment="Top" Width="118" Height="26" Click="Close_OnClick"/>

    </Grid>
</Window>
